{
	"name": "tg-gateway",
	"version": "0.1.0",
	"packageManager": "pnpm@10.12.1",
	"type": "module",
	"description": "Portable Telegram gateway for CLI agents",
	"bin": {
		"tg-gateway": "dist/daemon/cli.js",
		"tg-links": "dist/workspace/links-cli.js",
		"tg-concepts": "dist/workspace/concepts-cli.js"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsx watch src/daemon/cli.ts start",
		"dev:once": "tsx src/daemon/cli.ts start",
		"gateway": "node dist/daemon/cli.js start",
		"gateway:daemon": "node dist/daemon/cli.js start --daemon",
		"gateway:stop": "node dist/daemon/cli.js stop",
		"gateway:status": "node dist/daemon/cli.js status",
		"gateway:restart": "pnpm run gateway:stop; sleep 2; pnpm run gateway:daemon",
		"gateway:restart:build": "pnpm run build && pnpm run gateway:restart",
		"lint": "eslint .",
		"typecheck": "tsc -p tsconfig.test.json --noEmit",
		"test": "vitest run",
		"test:unit": "vitest run --exclude '**/*.e2e.ts'",
		"test:e2e": "vitest run --config vitest.e2e.config.ts",
		"test:integration": "vitest run --grep 'integration|e2e'",
		"docs:check": "tsx scripts/docs-check.ts",
		"telegram:session": "tsx scripts/telegram-session.ts",
		"precommit": "pnpm run typecheck && pnpm run lint && pnpm run test:unit",
		"prepare": "husky"
	},
	"dependencies": {
		"commander": "^12.1.0",
		"grammy": "^1.25.1",
		"telegram": "^2.26.22",
		"ws": "^8.18.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@types/node": "^22.13.1",
		"@types/ws": "^8.5.13",
		"@typescript-eslint/eslint-plugin": "^8.23.0",
		"@typescript-eslint/parser": "^8.23.0",
		"eslint": "^9.19.0",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vitest": "^2.1.9"
	}
}
